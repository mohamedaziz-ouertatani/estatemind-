# ============================================================
# DATABASE CONFIGURATION
# ============================================================
# For local development with PostgreSQL
DATABASE_URL="postgresql://user:password@localhost:5432/estatemind?schema=public&connection_limit=10&pool_timeout=20"

# For production (Vercel Postgres / Neon / Supabase)
# Direct connection (unpooled) - use for migrations and single long-running operations
DATABASE_URL_UNPOOLED="postgresql://user:password@host:5432/estatemind?schema=public"

# Connection pool settings
DATABASE_CONNECTION_LIMIT=10
DATABASE_POOL_TIMEOUT=20

# ============================================================
# AUTHENTICATION (NextAuth.js)
# ============================================================
NEXTAUTH_URL="http://localhost:3000"
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# ============================================================
# DEVELOPMENT MODE
# ============================================================
NODE_ENV="development"
# Set to "true" to bypass authentication in development
NEXT_PUBLIC_BYPASS_AUTH="true"

# ============================================================
# MAP SERVICES (Mapbox)
# ============================================================
# Get your token from: https://account.mapbox.com/access-tokens/
NEXT_PUBLIC_MAPBOX_TOKEN="your-mapbox-token-here"
MAPBOX_STYLE="mapbox://styles/mapbox/streets-v12"

# ============================================================
# AI SERVICE (FastAPI)
# ============================================================
AI_SERVICE_URL="http://localhost:8000"
AI_SERVICE_API_KEY="your-ai-service-api-key-change-in-production"

# ============================================================
# PAYMENT PROCESSING (Stripe)
# ============================================================
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."

# ============================================================
# EMAIL SERVICE (Resend)
# ============================================================
RESEND_API_KEY="re_..."
EMAIL_FROM="noreply@estatemind.tn"

# ============================================================
# AI/ML SERVICES (Optional)
# ============================================================
# OpenAI for legal assistant RAG
OPENAI_API_KEY="sk-..."

